int marks_summation(int* marks, int number_of_students, char gender) 
{
    int sumb = 0, sumg = 0,i;
    for (i = 0; i < number_of_students; i++) 
{
        if (i % 2 == 0)
{
            sumb = sumb + marks[i];
        } else
{
            sumg += marks[i];
        }
    }
    if (gender == 'b') {
        return sumb;
    } else {
        return sumg;
    }
}
