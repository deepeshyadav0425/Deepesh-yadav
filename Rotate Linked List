class Solution {
  public:
    Node* rotate(Node* head, int k) {
        // 1. Edge Case
        if (!head) return NULL;
        Node *temp = head;
        int n = 1;
        while (temp->next != NULL) {
            n++;
            temp = temp->next;
        }
        k = k % n;
        if (k == 0) return head;
        temp->next = head;
        Node *pre = NULL;
        Node *curr = head;
        
        for (int i = 1; i <= k; i++) {
            pre = curr;
            curr = curr->next;
        }
        head = curr;
        pre->next = NULL;

        return head;
    }
};
